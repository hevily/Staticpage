//访问统计,统计登录用户访问当前页(商品和店铺)的记录
//dom要求:页面必须有两个隐藏input name:stores_id,goods_id
function ecTongji() {
    var stores_id = $("#stores_id").val();
    var goods_id = $("#goods_id").val();
    var datetime = (new Date()).format("yyyy-MM-dd hh:mm:ss");
    if (!stores_id && !goods_id) {
        return;
    }
    var data = {};
    if (stores_id) {
        data.stores_id = stores_id;
    }
    if (goods_id) {
        data.goods_id = goods_id;
    }
    data.local_log_datetime = datetime;
    data = JSON.stringify(data);
    var url = urlRestapi + "logInfo.php?session_id=" + cookieGet("PHPSESSID");
    $.ajax({
        type: "post",
        url: url,
        data: data,
        async: true,
        success: function (response) {
            if (response.isSuccess) {
                console.log('ok');
            } else {
                console.log('false');
            }
        }, error: function () {
            console.log('error:ajax错误');
        }
    });
}

//商品 首屏flash加载图片  商品详情/代金券详情
function ecGoodsFlash(config) {
    var $div = $(".ecGoodsFlash");
    var collectid = $div.data("collectid"),
            goods_id = $div.data("goods_id"),
            width = $div.data("width"),
            height = $div.data("height"),
            type = $div.data("type");

    width = width ? width : 640;
    height = height ? height : 480;
    type = type ? type : 2;
    //设置qr宽度	
    if (height == 360) {
        var qr_width = 56.3;
    } else {
        var qr_width = 75;
    }


    var $ul = $div.find("ul");
    var tpl = '<li ><img class=""  src="" /></li>';
    if (collectid) {
        $.ajax({
            type: "post",
            url: urlRestapi + "getCollectElems_public.php",
            data: '{"collect_id":"' + collectid + '","itemsIndexMin":0,  "itemsIndexMax":200,  "itemsLimit":5  }',
            success: function (response) {
                if (response.isSuccess) {
                    $.each(response.items, function (i, n) {
                        var $li = $(tpl);
                        var src = n.url + "&width=" + width + "&height=" + height + "&type=" + type;
                        $li.find("img").attr("src", src);
                        if (n.wfextension == "video/mp4" || n.wfextension == "audio/mp4") {
                            $li.find("img").attr("title", "video-mark");
                            $li.addClass("video-mark-box").attr("data-video_id", n.id);
                            $li.append('<img class="video-mark" src="/statichtml/bjmovie01/estores/Public/home/img/video-play-img@5x.png" title="video-mark">');
                            $div.append('<span  id="video_html_' + n.id + '" style="display:none"><div data-src="' + n.videourl + '" data-type ="video"></div></span>');
                        }
                        $ul.append($li);
                    });
                }
                $ul.append('<li ><img class="" src="/statichtml/bjmovie01/estores/Home/Goods/createQr/goods_id/' + goods_id + '"  style="width:' + qr_width + '%"></li>');
                if (!config) {
                    config = {controlNav: false};
                }
                $('.am-slider').flexslider(config);

                ////播放视频
                $("#auto-loop").on("click", ".video-mark-box", function () {
                    var video_id = $(this).data("video_id");
                    var url = $("#video_html_" + video_id).children("div").data("src"),
                            type = $("#video_html_" + video_id).children("div").data("type");
                    console.log('app调起视频播放器,type:' + type + ',url:' + url);
                    on_playMedia(type, url);

                    //                      console.log('弹出播放视频');
                    // layer.open({
                    // 	fixed:true,
                    // 	content:$("#video_html_"+video_id).html()
                    // })
                })


                //app读取轮播焦点图片  ,不读取 clone的收尾图片
                var img0 = $("#auto-loop").find("li:not(.clone)").find("img[title!='video-mark']");

                var arr0 = [];
                for (var i0 = 0; i0 < img0.length; i0++) {

                    img0[i0].index = i0;
                    var b0 = arr0.push(img0[i0].src);
                    img0[i0].onclick = function () {
                        // alert(arr);
                        var j0 = this.index + 1;
                        console.log('app点击查看轮播焦点图大图:' + arr0);
                        if (window.showImage) {
                            window.showImage.showPictureManager(arr0.join(","), this.src);
                        } else {
                            showPictureManager({"items": arr0, "img": this.src});
                        }
                    }


                }


                //app读取编辑器里的图片
                var img = $(".body_html").find("img[title!='link']");
                var arr = [];
                for (var i = 0; i < img.length; i++) {

                    img[i].index = i;
                    var b = arr.push(img[i].src);
                    img[i].onclick = function () {
                        console.log('app点击查看大图:' + arr);
                        var j = this.index + 1;
                        console.log(this.src);
                        if (window.showImage) {
                            window.showImage.showPictureManager(arr.join(","), this.src);
                        } else {
                            showPictureManager({"items": arr, "img": this.src});
                        }
                    }


                }



            }
        });


    }


}
//收藏按钮2 发布详情页
// dom要求: id=favouriteGoods的收藏按钮
function favouriteGoods2() {
    var $objs = $("#favouriteGoods,#favouriteGoods2,.favouriteGoods3");
    $("#favouriteGoods,#favouriteGoods2,.favouriteGoods3").each(function (i, e) {
        check($(e));
        listen($(e));
    });
    function check($obj) {
        var goods_id = $obj.data("goodsid");
        var url = urlRestapi + "favourite_check.php?session_id=" + cookieGet("PHPSESSID");
        var data = '{"goods_id":' + goods_id + '}';
        $.ajax({
            type: "post",
            url: url,
            data: data,
            async: true,
            success: function (response) {
                if (response.isSuccess) {
                    $obj.show();
                    if (response.isExist) {
                        //已收藏
                        $objs.each(function (i, obj) {
                            var $obj = $(obj);
                            $obj.data('a_usernewsfeed_id', response.a_usernewsfeed_id);
                            $obj.find(".ico").addClass("already");
                            $obj.find(".text").text("已收藏");
                        })

                    } else {
                        //未收藏
                        $objs.each(function (i, obj) {
                            var $obj = $(obj);
                            $obj.find(".text").text(L.FAV);
                        })
                    }
                } else {


                }
            }
        });
    }
    function listen($obj) {
        var goods_id = $obj.data("goodsid");
        $obj.on("click", function () {
            var url;
            if (!($obj.find(".ico").hasClass('already'))) {
                url = urlRestapi + "favourite_add.php?session_id=" + cookieGet("PHPSESSID");
                $.ajax({
                    type: "post",
                    url: url,
                    data: '{"item":{"goods_id":' + goods_id + '}}',
                    success: function (response) {
                        if (response.isSuccess) {
                            $objs.each(function (i, obj) {
                                var $obj = $(obj);
                                $obj.data('a_usernewsfeed_id', response.item.id);
                                $obj.find(".ico").addClass("already");
                                $obj.find(".text").text("已收藏");
                                //amAlert("success",'收藏成功',1200);
                            });
                        } else {
                            amAlert("warning", '收藏失败', 1200);
                        }
                    },
                    error: function () {
                        amAlert("danger", 'ajax错误', 1200);
                    },
                    async: true
                });
            } else {
                url = urlRestapi + "favourite_delete.php?session_id=" + cookieGet("PHPSESSID");
                $.ajax({
                    type: "post",
                    url: url,
                    data: '{"id":' + $obj.data('a_usernewsfeed_id') + '}',
//						data:'{"item":{"goods_id":'+goods_id+'}}',
                    success: function (response) {
                        if (response.isSuccess) {
                            $objs.each(function (i, obj) {
                                var $obj = $(obj);
                                $obj.find(".ico").removeClass("already");
                                $obj.find(".text").text(L.FAV);
                            });
                            //amAlert("success",'取消收藏成功',1200);
                        } else {
                            amAlert("warning", '取消收藏失败', 1200);
                        }
                    },
                    error: function () {
                        amAlert("danger", 'ajax错误', 1200);
                    },
                    async: true
                });
            }
        });
    }
}
//收藏按钮
// dom要求: id=favouriteGoods的收藏按钮
function favouriteGoods() {
    var $obj = $("#favouriteGoods");
    var goods_id = $obj.data("goodsid");
    function check() {
        var url = urlRestapi + "favourite_check.php?session_id=" + cookieGet("PHPSESSID");
        var data = '{"goods_id":' + goods_id + '}';
        $.ajax({
            type: "post",
            url: url,
            data: data,
            async: true,
            success: function (response) {
                if (response.isSuccess) {
                    $obj.show();
                    if (response.isExist) {
                        //已收藏
                        $obj.data('a_usernewsfeed_id', response.a_usernewsfeed_id);
                        $obj.find(".ico").addClass("already");
                        $obj.find(".text").text("已收藏");
                    } else {
                        //未收藏
                        $obj.find(".text").text(L.FAV);
                    }
                } else {

                }
            }
        });
    }
    check();
    function listen() {
        $obj.on("click", function () {
            var url;
            if (!($obj.find(".ico").hasClass('already'))) {
                url = urlRestapi + "favourite_add.php?session_id=" + cookieGet("PHPSESSID");
                $.ajax({
                    type: "post",
                    url: url,
                    data: '{"item":{"goods_id":' + goods_id + '}}',
                    success: function (response) {
                        if (response.isSuccess) {
                            $obj.data('a_usernewsfeed_id', response.item.id);
                            $obj.find(".ico").addClass("already");
                            $obj.find(".text").text("已收藏");
                            amAlert("success", '收藏成功', 1200);
                        } else {
                            amAlert("warning", '收藏失败', 1200);
                        }
                    },
                    error: function () {
                        amAlert("danger", 'ajax错误', 1200);
                    },
                    async: true
                });
            } else {
                url = urlRestapi + "favourite_delete.php?session_id=" + cookieGet("PHPSESSID");
                $.ajax({
                    type: "post",
                    url: url,
                    data: '{"id":' + $obj.data('a_usernewsfeed_id') + '}',
//						data:'{"item":{"goods_id":'+goods_id+'}}',
                    success: function (response) {
                        if (response.isSuccess) {
                            $obj.find(".ico").removeClass("already");
                            $obj.find(".text").text(L.FAV);
                            amAlert("success", '取消收藏成功', 1200);
                        } else {
                            amAlert("warning", '取消收藏失败', 1200);
                        }
                    },
                    error: function () {
                        amAlert("danger", 'ajax错误', 1200);
                    },
                    async: true
                });
            }
        });
    }
    listen();
}

/**
 * 异步加载相册图片,替代ajaxImg  目前不考虑传音频
 * @param {Object} select 可以是选择器字符串,也可以是jquery对象. 相册容器
 * @param {Object} thumb_ 可选 关于图片(width/height/type)的json对象.如果不填,必须在容器的data-thumb里填写
 */
function loadImgNew(select, thumb_) {
    var imgSrcBase = urlRoot + "Store/Public/img?id=";
    var $ul;

    if (typeof select === "string") {
        $ul = $(select);
    } else if (typeof select === "object") {
        $ul = select;
    }
    if ($ul.length == 0) {
        return;
    }
    if (!($ul.length)) {
        $ul = $('body');
    }
    var thumb = thumb_ ? thumb_ : $ul.data("thumb");

    //goods_info 封面
    $ul.find("img[isnew='yes']").each(function () {
        var collectId = $(this).data("collectid");
        var $img = $(this);
        if (collectId) {
            $.ajax({
                type: "post",
                url: urlRestapi + "getCollect_public.php", //getCollectElems_public.php
                data: '{"collect_id":"' + collectId + '","itemsIndexMin":0,  "itemsIndexMax":200,  "itemsLimit":1  }',
                async: true,
                success: function (response) {

                    if (response.isSuccess) {
                        if (response.item.wfemltableid) { //有封面
                            $img.attr('src', response.item.url + "&width=" + thumb.width + "&height=" + thumb.height + "&type=" + thumb.type);
                        } else {   //读取循环里的第一个缩略图
                            if (response.item.elems) {
                                $img.attr('src', response.item.elems[0]['url'] + "&width=" + thumb.width + "&height=" + thumb.height + "&type=" + thumb.type);
                            }
                        }
                        $img.attr('isnew', 'no');
                    }

                }
            });
        }
    });

    //店铺logo 获取
    $ul.find("img[isload='yes']").each(function () {
        var collect_id = $(this).data("collectid"),
                logo_id = $(this).data("logo_id"),
                $img = $(this);
        if (collect_id) {
            $.ajax({
                type: "post",
                url: urlRestapi + "getCollect_public.php",
                data: '{"collect_id":"' + collect_id + '","itemsIndexMin":0,  "itemsIndexMax":200,  "itemsLimit":1  }',
                async: true,
                success: function (response) {
                    if (response.isSuccess) {
                        //当有封面的时候 展示 封面  当没有封面时  循环遍历   遍历到最后一个才是 第一张上传的图片
                        if (response.item.wfemltableid) {
                            $img.attr('src', response.item.url + "&width=" + thumb.width + "&height=" + thumb.height + "&type=" + thumb.type);
                        } else if (response.item.elems) {
                            $.map(response.item.elems, function (item) {
                                $img.attr('src', item.url + "&width=" + thumb.width + "&height=" + thumb.height + "&type=" + thumb.type);
                            });
                        }
                        $img.attr('isload', 'no');
                    }
                },
            });
        } else {
            //无相册，有传单张图片
            if (logo_id) {
                $img.attr({"src": "https://shop.yshjie.com/statichtml/bjmovie01/estores/Store/public/img?id=" + logo_id + "&width=" + thumb.width + "&height=" + thumb.height + "&type=" + thumb.type, "isload": "no"});
            }
        }
    });



}

//在指定容器加载商品列表,不支持more
function ecGoodsList($select) {
    var thumb = $select.data("thumb");
    var url = $select.data("url");
    var data = $select.data("data");
    var tpl = $("<p></p>").append($select.find(".tpl").removeClass('tpl')).html();
    $.ajax({
        type: "post", url: url, data: data,
        success: function (response) {
            if (response.status && response.status == '1') {
                $.each(response.data, function (i, e) {
                    laytpl(tpl).render(e, function (render) {
                        $select.append(render);
                    });
                });
                loadImgNew($select, thumb);
            }
        }
    });
}

/**
 * 异步加载相册图片
 * @param {Object} callback( $对象 , 数据 )
 * 如果callback不是函数则 默认修改$对象的src
 */
function ajaxImg(callback) {
    var imgSrcBase = urlRoot + "Store/Public/img?id=";
    $("[isnew='yes']").each(function () {
        var collectId = $(this).data("id") ? $(this).data("id") : ($(this).data("collectid") ? $(this).data("collectid") : 0);
        var $img = $(this);
        if (collectId) {
            $.ajax({
                type: "post",
                url: urlRestapi + "getCollectElems_public.php?session_id=" + cookieGet("PHPSESSID"),
                data: '{"collect_id":"' + collectId + '","itemsIndexMin":0,  "itemsIndexMax":200,  "itemsLimit":1  }',
                async: true,
                success: function (response) {
                    if (response.isSuccess) {
                        $.map(response.items, function (item) {
                            if (typeof callback === 'function') {
                                callback($img, item);
                            } else {
                                $img.attr('src', imgSrcBase + item.wfemltableid + "&width=120&height=120&type=3");
                                //$img.parents(".img").css('background-image','url('+imgSrcBase+item.wfemltableid+"&width=120&height=120&type=3"+')');
                            }
                        });
                        $img.attr('isnew', 'no');
                    }
                }
            });
        }
    });
}

/**
 * 显示剧照 , 单相册
 */
function ecGoodsJuzhao(select) {
    var $ul = $(select);
    var collectId = $ul.data('collectid');
    var thumb = $ul.data("thumb");
    var limit = $ul.data("limit") ? $ul.data("limit") : 9;
    if (collectId) {
        $.ajax({
            type: "post",
            url: urlRestapi + "getCollectElems_public.php",
            data: '{"collect_id":"' + collectId + '","itemsIndexMin":0,  "itemsIndexMax":200,  "itemsLimit":' + limit + '  }',
            async: true,
            success: function (response) {
                if (response.isSuccess) {
                    $.map(response.items, function (item) {
                        imgSrc = imgSrcBase + item.wfemltableid + "&width=" + thumb.width + "&height=" + thumb.height + "&type=" + thumb.type;
                        imgSrc2 = imgSrcBase + item.wfemltableid;
                        var $newItem = $('<li><div class="img"><img src="' + imgSrc + '" data-rel="' + imgSrc2 + '"></div></li>');
                        $ul.append($newItem);
                    });
                }
                $.AMUI.gallery.init();
                $('[data-am-pureview]').pureview();

            }
        });
    }
}

/**
 * 显示片场档案 , 单相册
 */
function ecGoodsPcdan(select) {
    var $ul = $(select);
    var collectId = $ul.data('collectid');
    if (collectId) {
        $.ajax({
            type: "post",
            url: urlRestapi + "getCollectElems_public.php",
            data: '{"collect_id":"' + collectId + '","itemsIndexMin":0,  "itemsIndexMax":240,  "itemsLimit":9  }',
            async: true,
            success: function (response) {
                if (response.isSuccess) {
                    $.map(response.items, function (item) {
                        imgSrc = imgSrcBase + item.wfemltableid + "&width=240&height=180&type=3";
                        var $newItem = $('<li data-src="' + imgSrc + '"><div class="img"><img  src="' + imgSrc + '"></div></li>');
                        $ul.append($newItem);
                    });
                }
            }
        });
    }
}
/**
 * 动态为超链接设置触摸时显示边框
 * @param {String} select 目标的选择器
 * @param {String} className '触摸时的css样式'
 */
function ecTouchAble(select, className) {
    className = className ? className : "ecTouchstart";
    $("body").delegate(select, 'touchstart', function () {
        $(this).addClass(className);
    });
    $("body").delegate(select, 'touchcancel', function () {
        $(this).removeClass(className);
    });
    $("body").delegate(select, 'touchend', function () {
        $(this).removeClass(className);
    });
}

/**
 * 显示片场档案 , 多相册
 * @param {Object} select 容器选择器
 * @param {Object} tpl	每个图片的模板
 */
function ecGoodsPianchang(select, tpl) {
    var $ul = $(select);
    var url = $ul.data("url");
    if ($ul.length) {
        $.ajax({
            type: "post",
            url: url,
            success: function (response) {
                if (response.status == 1) {
                    $.each(response.data, function (i, e) {
                        laytpl(tpl).render(e, function (render) {
                            $(select).append(render);
                        });
                    });
                    loadImgNew(select);
                }

            }
        });
    }
}


/**
 * 新闻资讯   加载更多 版本1
 * @param {Object} select 容器的选择器
 * @param {Object} config 可选配制,如果不用容器的data配制,就用JS传入config配置
 * 配制内容:
 * 		data-url | config.url		'../../Mall/public/loadmore'
 * 		data-tpl | config.tpl 		'#tpl'
 * 		data-thumb | config.thumb 	{"width":110,"height":110,"type":3}
 */
var loadMore1 = function (select, config) {
    loadMore1.prototype.config = {};
    loadMore1.prototype.init = function (config_) {
        var plugin = this;

        this.$ul = $(select);
        this.config = config = $.extend({}, loadMore1.prototype.config, config_);
        this.url = (config && config.url) ? config.url : $(select).data("url");
        this.tpl = (config && config.tpl) ? $(config.tpl).html() : $($(select).data("tpl")).html();
        this.thumb = (config && config.thumb) ? config.thumb : $(select).data("thumb");
        this.$btnMore = $(select).siblings(".row-load-more");
        //点击 加载更多
        //  console.log($(select).siblings(".row-load-more").html());
        $(select).siblings(".row-load-more").on("click", function () {
            if ($(this).html() != L.NO_RECORD && $(this).html() != L.MYGDLE) {
                plugin.query();
            }

        });

        //显示加载条即 加载更多
        $(window).scroll(function () {
            if ($(window).scrollTop() >= $(document).height() - $(window).height()) {
                //plugin.query();
            }
        });

        //滑动 加载更多向上滑动超过300毫秒并且滑动距离>=1/6才会触发
        new Touch({
            dom: window,
            callback: function () {
                if ($(window).scrollTop() >= $(document).height() - $(window).height()) {
                    plugin.query();
                }
            }
        });



    }
    //显示loading动画
    loadMore1.prototype.loading = function () {
        this.$btnMore.html('<div class="sk-spinner sk-spinner-rotating-plane"></div> ' + L.LOADING);
    }
    //加载
    loadMore1.prototype.query = function () {
        var plugin = this;
        var $btnMore = this.$btnMore;
        var page = $btnMore.data('page') ? $btnMore.data('page') : 0;
        page = +page + 1;
        var data = plugin.$ul.data("data");
        data.page = page;
        data.pagesize = data.pagesize ? data.pagesize : 12;

        plugin.loading();
        //debugger;
        $.ajax({
            type: "post",
            data: data,
            url: plugin.url,
            success: function (response) {
                if (response.status) {
                    switch (response.status) {
                        case 1:
                            if (page <= 1) {
                                plugin.$ul.html("");
                            }
                            if (response.data != null && response.data != '') {
                                $btnMore.data('page', page);
                                plugin.append(response.data, page);

                                if (response.pageCount <= page) {

                                    $btnMore.html(L.MYGDLE);

                                } else {
                                    $btnMore.html(L.CLICK);

                                }
                            } else {
                                if (page == 1) {
                                    $btnMore.html(L.NO_RECORD);

                                } else {
                                    $btnMore.html(L.MYGDLE);

                                }
                            }
                            break;
                        default:
                            $btnMore.html(L.LOAD_FAILD);
                    }
                } else {

                    $btnMore.html(L.LOAD_FAILD);
                }
            },
            error: function () {
                $btnMore.html('加载失败,请重试');
            }
        });
        //debugger;
    }

    loadMore1.prototype.tplSet = function (newtpl) {
        var plugin = this;
        plugin.tpl = newtpl;
    }


    //加载成功 dom插入
    loadMore1.prototype.append = function (data, page) {
        var plugin = this;
        if (data) {
            $.each(data, function (i, e) {
                laytpl(plugin.tpl).render(e, function (render) {
                    plugin.$ul.append(render);
                });
            });
            loadImgNew(plugin.$ul, plugin.thumb);
        }
    }

    //查 data
    loadMore1.prototype.dataGet = function (key) {
        var val = null;
        if (val = this.$ul.data("data")[key]) {
            return val;
        } else {
            return null;
        }
    }
    //增改 data
    loadMore1.prototype.dataSet = function (key, val) {
        var data;
        data = this.$ul.data("data");
        data[key] = val;
        this.$ul.data("data", data);
        //console.dir(this.$ul.data("data"));
    }
    //删 data
    loadMore1.prototype.dataDelete = function (key) {
        var data;
        data = this.$ul.data("data");
        delete data[key];
        this.$ul.data("data", data);
    }
    //清零page,目的是当再次执行query()时,把页面先清空再加载
    loadMore1.prototype.pageClear = function () {
        this.$btnMore.data("page", 0);
    }

    this.init(config);
}




/**
 * 通用加载更多 版本2
 * @param {Object} select 容器的选择器
 * @param {Object} config 可选配制,如果不用容器的data配制,就用JS传入config配置
 * 配制内容:
 * 		data-url | config.url		'../../Mall/public/loadmore'
 * 		data-tpl | config.tpl 		'#tpl'
 * 		data-thumb | config.thumb 	{"width":110,"height":110,"type":3}
 */
var loadMore2 = function (select, config) {
    loadMore2.prototype.config = {};
    loadMore2.prototype.init = function (config_) {
        var plugin = this;

        this.$ul = $(select);
        this.config = config = $.extend({}, loadMore2.prototype.config, config_);
        this.url = (config && config.url) ? config.url : $(select).data("url");
        this.tpl = (config && config.tpl) ? $(config.tpl).html() : $($(select).data("tpl")).html();
        this.thumb = (config && config.thumb) ? config.thumb : $(select).data("thumb");
        this.$btnMore = $(".row-load-more");


        $(".row-load-more").on("click", function () {
            if ($(this).html() != L.NO_RECORD && $(this).html() != L.MYGDLE) {
                plugin.query();
            }

        });

        //显示加载条即 加载更多
        $(window).scroll(function () {
            if ($(window).scrollTop() >= $(document).height() - $(window).height()) {
                //plugin.query();
            }
        });

        //滑动 加载更多向上滑动超过300毫秒并且滑动距离>=1/6才会触发
        new Touch({
            dom: window,
            callback: function () {
                if ($(window).scrollTop() >= $(document).height() - $(window).height()) {
                    plugin.query();
                }
            }
        });



    }
    //显示loading动画
    loadMore2.prototype.loading = function () {
        this.$btnMore.html('<div class="sk-spinner sk-spinner-rotating-plane"></div> ' + L.LOADING);
    }
    //加载
    loadMore2.prototype.query = function () {
        var plugin = this;
        var $btnMore = this.$btnMore;
        var page = $btnMore.data('page') ? $btnMore.data('page') : 0;
        page = +page + 1;
        var data = plugin.$ul.data("data");
        data.page = page;
        data.pagesize = data.pagesize ? data.pagesize : 12;

        plugin.loading();
        //debugger;
        $.ajax({
            type: "post",
            data: data,
            url: plugin.url,
            success: function (response) {
                if (response.status) {
                    switch (response.status) {
                        case 1:
                            if (page <= 1) {
                                plugin.$ul.html("");
                            }
                            if (response.data != null && response.data != '') {
                                $btnMore.data('page', page);
                                plugin.append(response.data, page);

                                if (response.pageCount <= page) {

                                    $btnMore.html(L.MYGDLE);

                                } else {
                                    $btnMore.html(L.CLICK);

                                }
                            } else {
                                if (page == 1) {
                                    $btnMore.html(L.NO_RECORD);

                                } else {
                                    $btnMore.html(L.MYGDLE);

                                }
                            }
                            break;
                        default:
                            $btnMore.html(L.LOAD_FAILD);
                    }
                } else {

                    $btnMore.html(L.LOAD_FAILD);
                }
            },
            error: function () {
                $btnMore.html('加载失败,请重试');
            }
        });
        //debugger;
    }

    loadMore2.prototype.tplSet = function (newtpl) {
        var plugin = this;
        plugin.tpl = newtpl;
    }


    //加载成功 dom插入
    loadMore2.prototype.append = function (data, page) {
        var plugin = this;
        if (data) {
            $.each(data, function (i, e) {
                laytpl(plugin.tpl).render(e, function (render) {
                    plugin.$ul.append(render);
                });
            });
            loadImgNew(plugin.$ul, plugin.thumb);
        }
    }

    //查 data
    loadMore2.prototype.dataGet = function (key) {
        var val = null;
        if (val = this.$ul.data("data")[key]) {
            return val;
        } else {
            return null;
        }
    }
    //增改 data
    loadMore2.prototype.dataSet = function (key, val) {
        var data;
        data = this.$ul.data("data");
        data[key] = val;
        this.$ul.data("data", data);
        //console.dir(this.$ul.data("data"));
    }
    //删 data
    loadMore2.prototype.dataDelete = function (key) {
        var data;
        data = this.$ul.data("data");
        delete data[key];
        this.$ul.data("data", data);
    }
    //清零page,目的是当再次执行query()时,把页面先清空再加载
    loadMore2.prototype.pageClear = function () {
        this.$btnMore.data("page", 0);
    }

    this.init(config);
}



/**
 *  搜索版本   加载更多 
 * @param {Object} select 容器的选择器
 * @param {Object} config 可选配制,如果不用容器的data配制,就用JS传入config配置
 * 配制内容:
 * 		data-url | config.url		'../../Mall/public/loadmore'
 * 		data-tpl | config.tpl 		'#tpl'
 * 		data-thumb | config.thumb 	{"width":110,"height":110,"type":3}
 */
var loadMore3 = function (select, config) {

    loadMore3.prototype.config = {};

    loadMore3.prototype.init = function (config_) {
        var plugin = this;
        this.$ul = $(select);
        this.config = config = $.extend({}, loadMore3.prototype.config, config_);
        this.url = (config && config.url) ? config.url : $(select).data("url");
        this.tpl = (config && config.tpl) ? $(config.tpl).html() : $($(select).data("tpl")).html();
        this.thumb = (config && config.thumb) ? config.thumb : $(select).data("thumb");
        this.$btnMore = $(".row-load-more");
        //点击 加载更多
        $(".row-load-more").on("click", function () {
            if ($(this).html() != L.NO_RECORD && $(this).html() != L.MYGDLE) {
                plugin.query();
            }

        });

        //显示加载条即 加载更多
        $(window).scroll(function () {
            if ($(window).scrollTop() >= $(document).height() - $(window).height()) {
                //plugin.query();
            }
        });

        //滑动 加载更多向上滑动超过300毫秒并且滑动距离>=1/6才会触发
        new Touch({
            dom: window,
            callback: function () {
                if ($(window).scrollTop() >= $(document).height() - $(window).height()) {
                    plugin.query();
                }
            }
        });



    }
    //显示loading动画
    loadMore3.prototype.loading = function () {
        this.$btnMore.html('<div class="sk-spinner sk-spinner-rotating-plane"></div> ' + L.LOADING);
        $('#sub').attr("data-status", 1);
    }
    //加载
    loadMore3.prototype.query = function () {
        var plugin = this;
        var $btnMore = this.$btnMore;
        var page = $btnMore.data('page') ? $btnMore.data('page') : 0;
        page = +page + 1;
        var data = plugin.$ul.data("data");
        data.page = page;
        data.pagesize = data.pagesize ? data.pagesize : 12;

        plugin.loading();
        //debugger;
        $.ajax({
            type: "post",
            data: data,
            url: plugin.url,
            success: function (response) {
                if (response.status) {
                    switch (response.status) {
                        case 1:
                            if (page <= 1) {
                                plugin.$ul.html("");
                            }
                            if (response.data != null && response.data != '') {
                                $btnMore.data('page', page);

                                plugin.append(response.data, response.goods_type, page);


                                if (response.pageCount <= page) {

                                    $btnMore.html(L.MYGDLE);
                                    $('#sub').attr("data-status", 0);
                                } else {
                                    $btnMore.html(L.CLICK);
                                    $('#sub').attr("data-status", 0);
                                }
                            } else {
                                if (page == 1) {
                                    $btnMore.html(L.NO_RECORD);
                                    $('#sub').attr("data-status", 0);
                                } else {
                                    $btnMore.html(L.MYGDLE);
                                    $('#sub').attr("data-status", 0);
                                }
                            }
                            break;
                        default:
                            $btnMore.html(L.LOAD_FAILD);
                    }
                } else {

                    $btnMore.html(L.LOAD_FAILD);
                }
            },
            error: function () {
                $btnMore.html('加载失败,请重试');
                //$btnMore.html('加载失败,请重试');
            }
        });
        //debugger;
    }

    loadMore3.prototype.tplSet = function (newtpl) {
        var plugin = this;
        plugin.tpl = newtpl;
    }




    //加载成功 dom插入
    loadMore3.prototype.append = function (data, goods_type, page) {
        var plugin = this;
        if (data) {
            $.each(data, function (i, e) {

                laytpl(plugin.tpl).render(e, function (render) {
                    plugin.$ul.append(render);
                });
            });
            if (goods_type == '4') {
                console.log('代金券类别');
                loadImgNew(plugin.$ul, {"width": 124.4, "height": 70, "type": 3}); //代金券单独判断
            } else {
                loadImgNew(plugin.$ul, plugin.thumb);
            }
        }
    }


    //对外接口,设置和获取data,data是ajax的data,也就是搜索页的筛选条件
    //查 data
    loadMore3.prototype.dataGet = function (key) {
        var val = null;
        if (val = this.$ul.data("data")[key]) {
            return val;
        } else {
            return null;
        }
    }
    //增改 data
    loadMore3.prototype.dataSet = function (key, val) {
        var data;
        data = this.$ul.data("data");
        data[key] = val;
        this.$ul.data("data", data);
        //console.dir(this.$ul.data("data"));
    }
    //删 data
    loadMore3.prototype.dataDelete = function (key) {
        var data;
        data = this.$ul.data("data");
        delete data[key];
        this.$ul.data("data", data);
    }
    //清零page,目的是当再次执行query()时,把页面先清空再加载
    loadMore3.prototype.pageClear = function () {
        this.$btnMore.data("page", 0);
    }

    this.init(config);
}


/**
 *  我的订单，订单列表  加载更多
 * @param {Object} select 容器的选择器
 * @param {Object} config 可选配制,如果不用容器的data配制,就用JS传入config配置
 * 配制内容:
 * 		data-url | config.url		'../../Mall/public/loadmore'
 * 		data-tpl | config.tpl 		'#tpl'
 * 		data-thumb | config.thumb 	{"width":110,"height":110,"type":3}
 */
var loadMore4 = function (select, config) {

    loadMore4.prototype.config = {};

    loadMore4.prototype.init = function (config_) {
        var plugin = this;
        this.$ul = $(select);
        this.config = config = $.extend({}, loadMore4.prototype.config, config_);
        this.url = (config && config.url) ? config.url : $(select).data("url");
        this.tpl = (config && config.tpl) ? $(config.tpl).html() : $($(select).data("tpl")).html();
        this.thumb = (config && config.thumb) ? config.thumb : $(select).data("thumb");
        this.$btnMore = $(".row-load-more");
        //点击 加载更多
        $(".row-load-more").on("click", function () {
            if ($(this).html() != L.NO_ORDER && $(this).html() != '') {
                plugin.query();
            }

        });

        //显示加载条即 加载更多
        $(window).scroll(function () {
            if ($(window).scrollTop() >= $(document).height() - $(window).height()) {
                //plugin.query();
            }
        });
        //滑动 加载更多向上滑动超过300毫秒并且滑动距离>=1/6才会触发
        new Touch({
            dom: window,
            callback: function () {
                if ($(window).scrollTop() >= $(document).height() - $(window).height()) {
                    plugin.query();
                }
            }
        })


    }
    //显示loading动画
    loadMore4.prototype.loading = function () {
        this.$btnMore.html('<div class="sk-spinner sk-spinner-rotating-plane"></div> ' + L.LOADING);
    }
    //加载
    loadMore4.prototype.query = function () {
        var plugin = this;
        var $btnMore = this.$btnMore;
        var page = $btnMore.data('page') ? $btnMore.data('page') : 0;
        page = +page + 1;
        var data = plugin.$ul.data("data");
        data.page = page;
        data.pagesize = data.pagesize ? data.pagesize : 12;

        plugin.loading();
        //debugger;
        $.ajax({
            type: "post",
            data: data,
            url: plugin.url,
            success: function (response) {
                if (response.status) {
                    switch (response.status) {
                        case 1:
                            if (page <= 1) {
                                plugin.$ul.html("");
                            }
                            if (response.data != null) {
                                $btnMore.data('page', page);
                                plugin.append(response.data, page);
                                if (response.pageCount <= page) {
                                    $btnMore.css({"line-height": "", "padding-bottom": "", "background": "#e6e6e6"});
                                    $btnMore.html('');//没有更多了
                                } else {
                                    $btnMore.css({"line-height": "", "padding-bottom": "", "background": "#fff"});
                                    $btnMore.html(L.CLICK);
                                }

                            } else {
                                if (page == 1) {
                                    $btnMore.css({"line-height": "100px", "padding-bottom": "500px", "background": "#e6e6e6"});
                                    $btnMore.html(L.NO_ORDER);

                                } else {
                                    $btnMore.css({"line-height": "", "padding-bottom": "", "background": "#e6e6e6"});
                                    $btnMore.html('');//没有更多了
                                }

                            }
                            break;
                        default:
                            $btnMore.css({"line-height": "", "padding-bottom": "", "background": "#fff"});
                            $btnMore.html(L.LOAD_FAILD);
                    }
                } else {
                    $btnMore.css({"line-height": "", "padding-bottom": "", "background": "#fff"});
                    $btnMore.html(L.LOAD_FAILD);
                }

            },
            error: function () {
                $btnMore.css({"line-height": "", "padding-bottom": "", "background": "#fff"});
                $btnMore.html('加载失败,请重试');
            }
        });
        //debugger;
    }

    loadMore4.prototype.tplSet = function (newtpl) {
        var plugin = this;
        plugin.tpl = newtpl;
    }




    //加载成功 dom插入
    loadMore4.prototype.append = function (data, page) {
        var plugin = this;
        if (data) {
            $.each(data, function (i, e) {
                laytpl(plugin.tpl).render(e, function (render) {
                    plugin.$ul.append(render);
                });
            });

            loadImgNew(plugin.$ul, plugin.thumb);
        }
    }



    //对外接口,设置和获取data,data是ajax的data,也就是搜索页的筛选条件
    //查 data
    loadMore4.prototype.dataGet = function (key) {
        var val = null;
        if (val = this.$ul.data("data")[key]) {
            return val;
        } else {
            return null;
        }
    }
    //增改 data
    loadMore4.prototype.dataSet = function (key, val) {
        var data;
        data = this.$ul.data("data");
        data[key] = val;
        this.$ul.data("data", data);
        //console.dir(this.$ul.data("data"));
    }
    //删 data
    loadMore4.prototype.dataDelete = function (key) {
        var data;
        data = this.$ul.data("data");
        delete data[key];
        this.$ul.data("data", data);
    }
    //清零page,目的是当再次执行query()时,把页面先清空再加载
    loadMore4.prototype.pageClear = function () {
        this.$btnMore.data("page", 0);
    }
    this.init(config);
}



/**
 *  店铺列表，带地图的【附近好店，附近的村，pokka分店地址，商家分店地址，和沐闪购……】
 * @param {Object} select 容器的选择器
 * @param {Object} config 可选配制,如果不用容器的data配制,就用JS传入config配置
 * 配制内容:
 * 		data-url | config.url		'../../Mall/public/loadmore'
 * 		data-tpl | config.tpl 		'#tpl'
 * 		data-thumb | config.thumb 	{"width":110,"height":110,"type":3}
 */
var loadMore5 = function (select, config) {

    loadMore5.prototype.config = {};

    loadMore5.prototype.init = function (config_) {
        var plugin = this;
        this.$ul = $(select);
        this.config = config = $.extend({}, loadMore5.prototype.config, config_);
        this.url = (config && config.url) ? config.url : $(select).data("url");
        this.tpl = (config && config.tpl) ? $(config.tpl).html() : $($(select).data("tpl")).html();
        this.thumb = (config && config.thumb) ? config.thumb : $(select).data("thumb");
        this.$btnMore = $(".row-load-more");
        //点击 加载更多
        $(".row-load-more").on("click", function () {
            if ($(this).html() != L.NO_RECORD && $(this).html() != L.MYGDLE) {
                plugin.query();
            }

        });

        //显示加载条即 加载更多
        $(window).scroll(function () {
            if ($(window).scrollTop() >= $(document).height() - $(window).height()) {
                //plugin.query();
            }
        });

        //滑动 加载更多向上滑动超过300毫秒并且滑动距离>=1/6才会触发
        new Touch({
            dom: window,
            callback: function () {
                if ($(window).scrollTop() >= $(document).height() - $(window).height()) {
                    plugin.query();
                }
            }
        });



    }
    //显示loading动画
    loadMore5.prototype.loading = function () {
        this.$btnMore.html('<div class="sk-spinner sk-spinner-rotating-plane"></div> ' + L.LOADING);
    }
    //加载
    loadMore5.prototype.query = function () {
        var plugin = this;
        var $btnMore = this.$btnMore;
        var page = $btnMore.data('page') ? $btnMore.data('page') : 0;
        page = +page + 1;
        var data = plugin.$ul.data("data");
        data.page = page;
        data.pagesize = data.pagesize ? data.pagesize : 12;

        plugin.loading();
        //debugger;
        $.ajax({
            type: "post",
            data: data,
            url: plugin.url,
            success: function (response) {
                if (response.status) {
                    switch (response.status) {
                        case 1:
                            if (page <= 1) {
                                plugin.$ul.html("");
                            }
                            if (response.data != null && response.data != '') {
                                $btnMore.data('page', page);
                                plugin.append(response.data, page);

                                //地图在打开状态 才会刷新地图数据
                                if ($("#map_status").val() == "1") {
                                    if (page > 1) { //大于一页的时候
                                        getStoresListPhp(1);////加载更多数据后调用更新 查看地图里的数据 用在商家列表，如pokka 分店地址：Home/Store/pokka_stores_branch
                                    } else {
                                        getStoresListPhp();
                                    }
                                }
                                if (response.pageCount <= page) {
                                    $btnMore.html(L.MYGDLE);
                                } else {
                                    $btnMore.html(L.CLICK);
                                }

                            } else {
                                if (page == 1) {
                                    $btnMore.html(L.NO_RECORD);
                                } else {
                                    $btnMore.html(L.MYGDLE);
                                }
                            }
                            break;
                        default:
                            $btnMore.html(L.LOAD_FAILD);
                    }
                } else {

                    $btnMore.html(L.LOAD_FAILD);
                }

            },
            error: function () {
                $btnMore.html('加载失败,请重试');
                //$btnMore.html('加载失败,请重试');
            }
        });
        //debugger;
    }

    loadMore5.prototype.tplSet = function (newtpl) {
        var plugin = this;
        plugin.tpl = newtpl;
    }




    //加载成功 dom插入
    loadMore5.prototype.append = function (data, page) {
        var plugin = this;
        if (data) {
            $.each(data, function (i, e) {
                laytpl(plugin.tpl).render(e, function (render) {
                    plugin.$ul.append(render);
                });
            });
            //alert($(plugin.$ul).html());
            loadImgNew(plugin.$ul, plugin.thumb);
        }
    }


    //对外接口,设置和获取data,data是ajax的data,也就是搜索页的筛选条件
    //查 data
    loadMore5.prototype.dataGet = function (key) {
        var val = null;
        if (val = this.$ul.data("data")[key]) {
            return val;
        } else {
            return null;
        }
    }
    //增改 data
    loadMore5.prototype.dataSet = function (key, val) {
        var data;
        data = this.$ul.data("data");
        data[key] = val;
        this.$ul.data("data", data);
        //console.dir(this.$ul.data("data"));
    }
    //删 data
    loadMore5.prototype.dataDelete = function (key) {
        var data;
        data = this.$ul.data("data");
        delete data[key];
        this.$ul.data("data", data);
    }
    //清零page,目的是当再次执行query()时,把页面先清空再加载
    loadMore5.prototype.pageClear = function () {
        this.$btnMore.data("page", 0);
    }

    this.init(config);
}




function qiangzhishuaxin() {
    var href = location.href;
    if (href.search(/#\?/)) {
        var rand = href.match(/rand=.*/);
        href = href.replace(rand, '');
    }
    href = href + 'rand=' + Math.random();
    history.replaceState({}, document.title, href);
    location.reload();
}

$(function () {
    //tab 切换
    $(".block-switch-nav a").on("click", function () {
        var $that = $(this);
        $that.addClass("active").siblings().removeClass("active");
        $that.parents(".fx-block").find(".block-switch-content").hide();
        $that.parents(".fx-block").find(".block-switch-content").eq($that.index()).show();
    });



    //联系商家按钮(这个是商品)
    $(".appiLxsj").on("click", function () {
        var $obj = $(this);
        $obj.prop("disabled", true);
        appiLxsj($obj, {
            success: function (response) {
                var urlNew = location.href.replace(/beginappi&.*&endappi/, '').replace(/[\?#]+$/, "");
                var urlCommand = location.href.slice(location.href.indexOf('beginappi&') + 10, location.href.indexOf('&endappi'));
                var url = urlNew + '?beginappi&' + encodeURIComponent('action=chat&docId=' + response.docId + '&stores_id=' + $obj.data("stores_id") + '&admin_userid=' + $obj.data("admin_userid") + '&appid=7' + '&stores_name=' + $obj.data("stores_name") + '&msubject=' + response.msubject) + '&endappi';
                $obj.prop("disabled", false);
                location.href = url;
                //amAlert("success", response.message, 1200);
            },
            error: function (response, filename) {
                $obj.prop("disabled", false);
                amAlert("warning", (response.message ? response.message : "") + ',' + filename);
            }
        }, "goods");
    });
    //联系商家按钮(这个是订单)
    $(document).delegate(".appiLxsj1", "click", function () {
        var $obj = $(this);
        $obj.prop("disabled", true);
        $obj.attr("src", $obj.data("dissrc"));
        appiLxsj($obj, {
            success: function (response) {
                var urlNew = location.href.replace(/beginappi&.*&endappi/, '').replace(/[\?#]+$/, "");
                var urlCommand = location.href.slice(location.href.indexOf('beginappi&') + 10, location.href.indexOf('&endappi'));
                var url = urlNew + '?beginappi&' + encodeURIComponent('action=chat&docId=' + response.docId + '&stores_id=' + $obj.data("stores_id") + '&admin_userid=' + $obj.data("admin_userid") + '&appid=8' + '&stores_name=' + $obj.data("stores_name") + '&msubject=' + response.msubject) + '&endappi';
                $obj.prop("disabled", false);
                $obj.attr("src", $obj.data("src"));
                location.href = url;
                //amAlert("success", response.message, 1200);

            },
            error: function (response, filename) {
                $obj.prop("disabled", false);
                $obj.attr("src", $obj.data("src"));
                amAlert("warning", (response.message ? response.message : "") + ',' + filename);
            }
        }, "order");
    });

    //author:gening time:2016-1-27
    //点击重新设置xy并存储至cookie
    $("body").on("click", ".map_zb_gn", function () {
        var xylocation = getloc();
        var xloc = 0, yloc = 0, address = "";
        if (xylocation.isSuccess == '1') {
            xloc = xylocation.locX;
            yloc = xylocation.locY;
            address = xylocation.address;
        }
        var timestamp = new Date().getTime();
        $.post("/statichtml/bjmovie01/estores/Mall/Public/setCookieZb?time=" + timestamp + "&" + Math.random(), {xloc: xloc, yloc: yloc, address: address});

    })


});

//获取手机app的x和y坐标
//返回值是json对象 isSuccess,locX,locY
function getloc() {
    try {
        var xylocation;

        if (window.showLocation) {
            //安卓的
            xylocation = window.showLocation.getLocation();

        } else {
            //ios的
            xylocation = getLocationIos();
            //	alert(xylocation);
        }
        return JSON.parse(xylocation);
    } catch (e) {
        return JSON.parse('{ "isSuccess": 0 }');
    }
}   
//主动停止ios和andride的loading动画
function stopLoading() {
    try {
        if (window.stopProgressDialog) {
            window.stopProgressDialog.gotoStopProgressDialog();
        } else {
            //ios的
            gotoStopProgressDialog();
        }
    } catch (e) {

    }
}
//主动调用app的分享组件
//@param title:分享组件的标题
//@param type:0//默认分享 无需回调shareCallbackPhp(), type:1  //回调 shareCallbackPhp()，用到分享购买
function showShare(title, type) {
    try {
        if (window.showLocation) {
            window.showLocation.getAppShare(title, type);
        } else {
            //ios的
            getAppShare({'shareTitle': title, 'shareType': type});
        }
    } catch (e) {

    }
}

//点击地图调用 app的js函数，获取地图json 字符串
function AppGetMapdata(json_str) {
    try {


        if (window.showLocation) {
            //安卓的
            window.showLocation.clickOnMap(json_str);
        } else {
            //ios的
            clickOnMap(json_str);
        }
    } catch (e) {

    }
}
//app调用打电话 
// param phoneNumber : string 电话号码
function appPhone(phoneNumber) {
    try {
        if (window.openPhone) {
            window.openPhone.dial(phoneNumber);
        } else {
			
            //ios的
            dial(phoneNumber);
        }
    } catch (e) {

    }
}

//播放视频音频
//@param type string  "video" "voice"
//@param url    string  视频/音频 播放地址
function on_playMedia(type, url) {
    try {
        if (window.showMedia) {
            window.showMedia.playMedia(type, url);
        } else {
            playMedia({"type": type, "url": url});
        }
    } catch (e) {
    }
}

//Web调用App 的扫码功能
function getAppScanner() {
    try {
        if (window.showQr) {
            //安卓的
            window.showQr.getScanner();
        } else {
            //ios的
            getScanner();
        }
    } catch (e) {
        alert("app还未开发");
    }
}



//商家列表页，点击地址调起地图上的坐标位置 应用在附近好店，分店地址。。。
//@param locationId int  分店id，唯一标识
//@param stores_yloc    double  店铺y坐标
//@param stores_xloc    double  店铺x坐标
function on_showStoreMarkerOnMap(locationId, stores_xloc, stores_yloc) {
    console.log("点击店铺地址调起地图上的坐标位置 location_id:" + locationId + ",stores_xloc:" + stores_xloc + ",stores_yloc:" + stores_yloc);
    try {
        if (window.showLocation) {
            window.showLocation.showStoreMarkerOnMap(locationId, stores_xloc, stores_yloc);
        } else {
            showStoreMarkerOnMap({"locationId": locationId, "stores_xloc": stores_xloc, "stores_yloc": stores_yloc});
        }
    } catch (e) {
    }
}





 